# Database
DATABASE_URL=mysql://root:password@localhost:3306/rentflow360

# Auth Secrets (Generate using: openssl rand -base64 32)
JWT_SECRET=replace_with_secure_random_string
JWT_REFRESH_SECRET=replace_with_secure_random_string
NEXTAUTH_SECRET=replace_with_secure_random_string
CRON_SECRET=your_generated_string_here

# Email Service (Generic SMTP - e.g., GoDaddy, Outlook, Gmail)
SMTP_HOST=smtpout.secureserver.net
SMTP_PORT=465
SMTP_SECURE=true # true for 465, false for 587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-strong-password
EMAIL_FROM_NAME=RentFlow360 Support

# Application URL
# Use http://localhost:3000 for local development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# FILE STORAGE
UPLOADTHING_SECRET=your_uploadthing_secret_here
UPLOADTHING_TOKEN=your_uploadthing_token_here

# CLOUDINARY CONFIGURATION
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloud_name_here
CLOUDINARY_API_KEY=your_api_key_here
CLOUDINARY_API_SECRET=your_api_secret_here

# SSN ENCRYPTION (Critical for GDPR compliance)
# Generate using: openssl rand -base64 32
SSN_ENCRYPTION_KEY=replace_with_secure_32_character_base64_encryption_key

# SMS TWILIO CONFIGURATION
# Get these from your Twilio Console (https://console.twilio.com)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
# -----------------------------------------------------------------------------
# SECURITY (CRITICAL)
# -----------------------------------------------------------------------------
# Used to encrypt Plaid Access Tokens in the DB. 
# Generate this using: openssl rand -hex 32
PAYMENT_ENCRYPTION_KEY=""

# Payment Data Encryption Keys (Generate using: openssl rand -base64 32)
PAYMENT_ENCRYPTION_KEY_METADATA=""
PAYMENT_ENCRYPTION_KEY_USER_INFO=""
PAYMENT_ENCRYPTION_KEY_TRANSACTION=""
PAYMENT_ENCRYPTION_KEY_WEBHOOK=""

# -----------------------------------------------------------------------------
# 1. STRIPE (USA - Cards & ACH Processing)
# -----------------------------------------------------------------------------
# The Secret Key used on the server (Node.js) to create PaymentIntents
STRIPE_SECRET_KEY="sk_test_..."

# The Webhook Secret to verify events (prevents fake callbacks)
STRIPE_WEBHOOK_SECRET="whsec_..."

# The Public Key used by React Elements (Frontend)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."

# (Optional) If using Stripe Connect for split payouts to US Landlords
STRIPE_CONNECT_CLIENT_ID="ca_..."

# -----------------------------------------------------------------------------
# 2. PLAID (USA - Bank Verification & Balance Checks)
# -----------------------------------------------------------------------------
PLAID_CLIENT_ID=""
PLAID_SECRET=""
# Options: 'sandbox', 'development', 'production'
PLAID_ENV="sandbox" 

# -----------------------------------------------------------------------------
# 3. PAYSTACK (KENYA - M-Pesa & Cards)
# -----------------------------------------------------------------------------
# Used on the server to Initialize Transactions and verify Splits
PAYSTACK_SECRET_KEY="sk_test_..."

# Used to verify Webhooks from Paystack
PAYSTACK_WEBHOOK_SECRET=""

# Used by the React Paystack Button (Frontend)
NEXT_PUBLIC_PAYSTACK_PUBLIC_KEY="pk_test_..."

# -----------------------------------------------------------------------------
# 4. M-PESA DARAJA (Direct Integration - Optional/Advanced)
# -----------------------------------------------------------------------------
# NOTE: Only fill these if you are bypassing Paystack to hit Safaricom directly.
# For Phase 1 & 2, Paystack handles M-Pesa, so leave these blank.
MPESA_CONSUMER_KEY=""
MPESA_CONSUMER_SECRET=""
MPESA_PASSKEY=""
MPESA_SHORTCODE="" # Business Paybill/Till
MPESA_ENV="sandbox"

# -----------------------------------------------------------------------------
# 5. M-PESA DIRECT INTEGRATION FLAG
# -----------------------------------------------------------------------------
# Set to "true" to use direct M-Pesa Daraja API instead of Paystack
USE_MPESA_DIRECT="false"

