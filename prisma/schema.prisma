  amountSubunits BigInt?  @map("amount_subunits") // API precise (e.g. 10050 cents)
  currency       String   @default("USD") @db.VarChar(3)
  exchangeRate   Decimal? @map("exchange_rate") @db.Decimal(10, 6) // For FX support

  // --- Classification ---
  method PaymentMethod // e.g. CREDIT_CARD
  type   TransactionType   @default(RENT)
  status TransactionStatus @default(PENDING)

  // --- Gateway Integration ---
  processor       PaymentProcessor? @default(MANUAL)
  processorId     String?           @unique @map("processor_id") // Stripe PaymentIntent ID
  processorStatus String?           @map("processor_status") // "succeeded", "requires_capture"
  paymentMethodId String?           @map("payment_method_id") // Tokenized Card ID
