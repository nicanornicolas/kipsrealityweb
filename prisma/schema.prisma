  routingNumber String? @map("routing_number")
  countryCode   String? @db.Char(2)
  ipAddress     String? @map("ip_address")

  // --- Failure Handling ---
  failureReason String?   @map("failure_reason")
  retryCount    Int       @default(0) @map("retry_count")
  nextRetryAt   DateTime? @map("next_retry_at")

  // --- Meta ---
  metadata  Json? // Store full webhook payload here
  paidOn    DateTime? @default(now()) @map("paid_on") @db.DateTime(0)
  createdAt DateTime? @default(now()) @map("created_at") @db.DateTime(0)
  updatedAt DateTime? @default(now()) @map("updated_at") @db.DateTime(0)

  // --- Financial Core Link ---
  postingStatus  PostingStatus @default(PENDING) @map("posting_status")
  journalEntryId String?       @unique @map("journal_entry_id")
  journalEntry   JournalEntry? @relation(fields: [journalEntryId], references: [id])

  // Relations
  invoice          Invoice           @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  paymentReversals PaymentReversal[]
  receipts         Receipt[]

  @@index([invoiceId])
